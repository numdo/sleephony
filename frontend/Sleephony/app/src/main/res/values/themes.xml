<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="Theme.Sleephony" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 윈도우 배경을 으로 설정 -->
        <item name="android:windowBackground">@color/black</item>
        <!-- (선택) 창 전환 애니메이션 스타일 자체를 없애기 -->
        <item name="android:windowAnimationStyle">@null</item>
        <!-- 기본 스플래시 화면 제거 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- 풀스크린 알람 전용 테마 -->
    <style name="Theme.Sleephony.FullScreenAlarm" parent="Theme.Sleephony">
        <!-- 배경을 투명 또는 다크 컬러로 설정해서 깜빡임 방지 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 전체 화면으로 확대 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 액션바 숨김 (NoActionBar 기반이면 불필요) -->
    </style>

</resources>